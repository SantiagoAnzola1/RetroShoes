<h2>List of Users</h2>



    <section >
        <div class="container-lg ">
            <div class="row">
                <div class="col">
                    <nav aria-label="breadcrumb" class="bg-white rounded-3 p-3 mb-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">Perfil</></li>
                           
                        </ol>
                    </nav>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 col-12">
                    <div class="card mb-4 col-12">
                        <div class="card-body text-center col-12 m-4">
                        <img src=@Url.Content("~/imagenes/bienvenida/user.png") alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">@NameUser</h5>
                           
                            <div class="d-flex justify-content-center mb-2">
                                <button type="submit" class="btn btnNaranja">Editar</button>
                            <button type="button" class="btn btn1 btnOut ms-1">@Html.ActionLink("Cerrar Sesión","LogOut", "Home")</button>
                            </div>
                        </div>
                    </div>
                
                </div>
                <div class="col-md-8 col-12">
                    <div class="card mb-4 col-12">
                    <div class="card-body col-8 m-4">
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0">Username</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0">@NameUser</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0">Email</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0">@EmailUser</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0">Cedula/ID</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0">@IdUser</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0">Password</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0">********</p>
                                </div>
                            </div>
                            <hr>
                           
                           
                            
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
        @if(Model != null)
        {
          @foreach (WebAppV2.Models.User oListItem in Model)
            {
            
                <tr>
                    <td>@oListItem.UserName</td>
                    <td>@oListItem.Email</td>
                    <td>@oListItem.Password</td>
                </tr>
            }
        
        }
        else
        {
        <div style="color:red;"> No Data Found</div>
        }
    </section>
   

